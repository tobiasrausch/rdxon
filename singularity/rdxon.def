# Build image
BootStrap: library
From: ubuntu:16.04
Stage: build

%post
	apt-get -y update
	apt-get install -y build-essential cmake g++ gfortran git hdf5-tools libboost-date-time-dev libboost-program-options-dev libboost-system-dev libboost-filesystem-dev libboost-iostreams-dev libboost-serialization-dev libbz2-dev libhdf5-dev libncurses-dev liblzma-dev zlib1g-dev
	apt-get clean
	rm -rf /var/lib/apt/lists/*
	cd /opt
	git clone --recursive https://github.com/tobiasrausch/rdxon.git
	cd /opt/rdxon/
	make STATIC=1 all
	make install


# Final image
BootStrap: library
From: alpine:3.9
Stage: final

%files from build
       /opt/rdxon/bin/rdxon /bin/rdxon

%post
	RDXONVERSION=`./bin/rdxon --version`
	echo "export RDXONVERSION=\"${RDXONVERSION}\"" >> $SINGULARITY_ENVIRONMENT
	CREATEDATE=`date`
	echo "export CREATEDATE=\"${CREATEDATE}\"" >> $SINGULARITY_ENVIRONMENT

%environment
	export PATH=/bin:$PATH

%runscript
	rdxon

%labels
	Singularity definition file version v0.0.1

%help
	This is a container running rdxon.
	You can run rdxon on files inside the directory where you start
	the container, i.e.: singularity exec rdxon.sif rdxon -x kmer.x.map -y kmer.y.map -o out.fq.gz in.fq.gz
